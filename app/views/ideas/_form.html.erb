<div class="container-fluid">
  <%= form_for @idea do |form| %>
    <% if @idea.errors.any? %>
      <p>
        <%= @idea.errors.full_messages.join(', ') %>
      </p>
    <% end %>
  <div>
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>


  <%= form.submit(value="Idea") %>
<% end %>
</div>
